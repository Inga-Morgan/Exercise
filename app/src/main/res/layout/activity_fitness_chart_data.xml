<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_custom_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.display.chartwidgetdemo.widget.PieChart
                android:layout_margin="@dimen/dp_10"
                android:id="@+id/pie_chart"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_300" />

            <TextView
                android:layout_margin="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="运动时长占比图" />

            <com.display.chartwidgetdemo.widget.BarAndChartTest
                android:layout_margin="@dimen/dp_10"
                android:id="@+id/chart_new_3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_300"
                android:layout_marginStart="@dimen/dp_10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/dp_10"
                android:padding="@dimen/dp_5"
                android:text="每日运动数据" />

            <com.display.chartwidgetdemo.widget.LineChartNew
                android:id="@+id/chart_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_300"
                android:layout_margin="@dimen/dp_10"
                android:padding="@dimen/dp_5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/dp_10"
                android:padding="@dimen/dp_5"
                android:text="运动排名" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>