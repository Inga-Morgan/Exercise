<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/user_infor_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/user_info_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200"
            android:background="#C1BB75"
            android:fitsSystemWindows="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/damon"
            app:layout_collapseMode="parallax"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_info_userLogo"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:layout_marginStart="@dimen/dp_36"
            android:layout_marginTop="@dimen/dp_50"
            android:src="@mipmap/header"
            app:civ_border_color="@android:color/white"
            app:civ_border_width="1dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/user_info_userName"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:layout_marginStart="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_50"
            android:text="@string/nick_name"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/user_info_userLogo"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/user_info_time"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_26"
            android:layout_marginStart="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_2"
            android:text="@string/unknown"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintLeft_toRightOf="@id/user_info_userLogo"
            app:layout_constraintTop_toBottomOf="@id/user_info_userName" />

        <TextView
            android:id="@+id/user_info_story"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_36"
            android:maxLines="10"
            android:padding="@dimen/dp_5"
            android:text="@string/signature"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/user_info_userLogo" />

        <ImageView
            android:id="@+id/user_info_edit"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginHorizontal="@dimen/dp_5"
            android:layout_marginBottom="36dp"
            android:src="@mipmap/ic_edit"
            android:clickable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:focusable="true" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/user_other_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_corners"
        app:layout_constraintTop_toBottomOf="@+id/user_infor_layout">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/user_recycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:overScrollMode="never"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
